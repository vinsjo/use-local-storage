{
    "name": "@vinsjo/use-local-storage",
    "version": "1.0.4",
    "description": "a react hook for storing a state in localStorage",
    "author": "Vincent Sj√∂gren",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vinsjo/use-local-storage"
    },
    "type": "module",
    "source": "./src/index.ts",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "umd:main": "./dist/index.umd.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.js",
            "default": "./dist/index.modern.js"
        }
    },
    "files": [
        "src",
        "dist"
    ],
    "browserslist": [
        "defaults and supports es6-module"
    ],
    "scripts": {
        "build": "microbundle",
        "dev": "microbundle watch",
        "prepublishOnly": "npm run build",
        "lint": "npx eslint src --ext .ts"
    },
    "dependencies": {
        "react": "^18.2.0",
        "safe-json-decode": "^1.0.1"
    },
    "devDependencies": {
        "@types/react": "latest",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "latest",
        "eslint": "latest",
        "eslint-plugin-react": "latest",
        "eslint-plugin-react-hooks": "latest",
        "microbundle": "latest"
    },
    "keywords": [
        "ESM",
        "react",
        "json",
        "localStorage"
    ]
}